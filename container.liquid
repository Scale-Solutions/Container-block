{% comment %} Styling {% endcomment %}
{% style %}
   #container-{{ block.id }}{
    position: relative;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }}; 

    *{
        z-index: 2;
    }
    .background-media{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index:1;
        overflow: hidden;
    }

    .background-media video{
        width: 100%;
        height: 100%;
        object-fit: {{ block.settings.video_position }};
    }
    .background-media img{
        width: 100%;
        height: 100%;
        object-fit: {{ block.settings.background_image_position }};
    }
  }
{% endstyle %}


{% if block.settings.styling_level == "basic" %}

    {% capture flex_wrap %}
       {%liquid 
            if block.settings.wrap_content 
                echo "wrap" 
            else 
                echo "nowrap" 
            endif
        %}
    {% endcapture %}
    {% capture flex_wrap_mobile %}
       {%liquid 
            if block.settings.wrap_content_mobile 
                echo "wrap" 
            else 
                echo "nowrap" 
            endif
        %}
    {% endcapture %}

    {% style %}

        #container-{{ block.id }}{
            display: flex;
            flex-direction: {{ block.settings.content_direction }};
            justify-content: {{ block.settings.horizontal_alignment }};
            align-items: {{ block.settings.vertical_alignment }};
            gap: {{ block.settings.gap }}px;
            flex-wrap: {{ flex_wrap }};
            width: {% if block.settings.width > 0 %}{{ block.settings.width }}%{%else%}auto{%endif%};
            height: {% if block.settings.height > 0 %}{{ block.settings.height }}%{%else%}auto{%endif%};
            padding-inline: {{ block.settings.padding_inline }}px;
            padding-block: {{ block.settings.padding_block }}px;
            {% if block.settings.border == "solid" %}
                border: solid {{ block.settings.border_width }}px {{ block.settings.border_color }};    
                border-radius: {{ block.settings.border_radius }}px;
            {% endif %}

            .background-media{
                {% if block.settings.border == "solid" %}
                    border-radius: {{ block.settings.border_radius }}px;
                {% endif %}
            }
        }

        {% if block.settings.enable_mobile_styling %}
        /* mobile styling */
        @media screen and (max-width: 749px) {

            #container-{{ block.id }}{
                display: flex;
                flex-direction: {{ block.settings.content_direction_mobile }};
                justify-content: {{ block.settings.horizontal_alignment_mobile }};
                align-items: {{ block.settings.vertical_alignment_mobile }};
                gap: {{ block.settings.gap_mobile }}px;
                flex-wrap: {{ flex_wrap_mobile }};
                width: {% if block.settings.width_mobile > 0 %}{{ block.settings.width_mobile }}%{%else%}auto{%endif%};
                height: {% if block.settings.height_mobile > 0 %}{{ block.settings.height_mobile }}%{%else%}auto{%endif%};
                border-radius: {{ block.settings.border_radius_mobile }}px;
                padding-inline: {{ block.settings.padding_inline_mobile }}px;
                padding-block: {{ block.settings.padding_block_mobile }}px;
                {% if block.settings.border_mobile == "solid" %}
                    border: solid {{ block.settings.border_width_mobile }}px {{ block.settings.border_color_mobile }};    
                    border-radius: {{ block.settings.border_radius_mobile }}px;
                {% endif %}

                .background-media{
                    {% if block.settings.border_mobile == "solid" %}
                        border-radius: {{ block.settings.border_radius_mobile }}px;
                    {% endif %}
                }
            }
        }
        {% endif %}
    {% endstyle %}
{% endif %}


{% if block.settings.styling_level == "advance" %}

    {% capture advanced_flex_wrap %}
       {%liquid 
            if block.settings.advanced_wrap_content 
                echo "wrap" 
            else 
                echo "nowrap" 
            endif
        %}
    {% endcapture %}

