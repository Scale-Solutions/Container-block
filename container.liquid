      {% endif %}  
      padding-inline: {{ block.settings.advanced_padding_inline }}px;
      padding-block: {{ block.settings.advanced_padding_block }}px;
      {% if block.settings.advanced_border == "solid" %}
        border: solid {{ block.settings.advanced_border_width }}px {{ block.settings.advanced_border_color }};    
        border-radius: {{ block.settings.advanced_border_radius }}px;
      {% endif %}

      {{ block.settings.advanced_css }}
    }

    {{ container_id }} .background-media{
      {% if block.settings.advanced_border == "solid" %}
        border-radius: {{ block.settings.advanced_border_radius }}px;
      {% endif %}
    }

      {% for i in (1..3) %}
        {% assign media_query = "advanced_media_query_" | append : i %}
        {% if block.settings[media_query] %}
            {% assign screen_width = "advanced_media_query_" | append : i | append: "_screen_width" %}
            {% assign screen_size = "advanced_media_query_" | append : i | append: "_screen_size" %}
            {% assign content_direction = "advanced_media_query_" | append : i | append: "_content_direction" %}
            {% assign horizontal_alignment = "advanced_media_query_" | append : i | append: "_horizontal_alignment" %}
            {% assign vertical_alignment = "advanced_media_query_" | append : i | append: "_vertical_alignment" %}
            {% assign gap = "advanced_media_query_" | append : i | append: "_gap" %}
            {% assign wrap_content = "advanced_media_query_" | append : i | append: "_wrap_content" %}
            {% assign width = "advanced_media_query_" | append : i | append: "_width" %}
            {% assign max_width = "advanced_media_query_" | append : i | append: "_max_width" %}
            {% assign height = "advanced_media_query_" | append : i | append: "_height" %}
            {% assign max_height = "advanced_media_query_" | append : i | append: "_max_height" %}
            {% assign padding_inline = "advanced_media_query_" | append : i | append: "_padding_inline" %}
            {% assign padding_block = "advanced_media_query_" | append : i | append: "_padding_block" %}
            {% assign border = "advanced_media_query_" | append : i | append: "_border" %}
            {% assign border_width = "advanced_media_query_" | append : i | append: "_border_width" %}
            {% assign border_color = "advanced_media_query_" | append : i | append: "_border_color" %}
            {% assign border_radius = "advanced_media_query_" | append : i | append: "_border_radius" %}
            {% assign css = "advanced_media_query_" | append : i | append: "_css" %}

            @media screen and ({{ block.settings[screen_width] }}-width: {{ block.settings[screen_size] }}px) {
              {{ container_id }}{
                flex-direction: {{ block.settings[content_direction] }};
                justify-content: {{ block.settings[horizontal_alignment] }};
                align-items: {{ block.settings[vertical_alignment] }};
                gap: {{ block.settings[gap] }}px;
                flex-wrap: {%liquid 
                  if block.settings[wrap_content] 
                    echo "wrap" 
                  else 
                    echo "nowrap" 
                  endif
                %};
                width: {% if block.settings[width] > 0 %}{{ block.settings[width] }}%{%else%}auto{%endif%};
                {% if block.settings[max_width] > 0 and block.settings[width] == 0 %}
                  max-width: {{ block.settings[max_width] }}%;
                {% endif %}  
                height: {% if block.settings[height] > 0 %}{{ block.settings[height] }}%{%else%}auto{%endif%};
                {% if block.settings[max_height] > 0 and block.settings[height] == 0 %}
                  max-height: {{ block.settings[max_height] }}%;
                {% endif %}  
                padding-inline: {{ block.settings[padding_inline] }}px;
                padding-block: {{ block.settings[padding_block] }}px;
                {% if block.settings[border] == "solid" %}
                  border: solid {{ block.settings[border_width] }}px {{ block.settings[border_color] }};    
                  border-radius: {{ block.settings[border_radius] }}px;
                {% endif %}

                {{ block.settings[css] }}
              }
              {{ container_id }} .background-media{
                {% if block.settings[border] == "solid" %}
                  border-radius: {{ block.settings[border_radius] }}px;
                {% endif %}
              }
            }
        {% endif %}    
      {% endfor %}
    
  {% endif %}
{% endstyle %}
{% comment %} Styling End {% endcomment %}


{% comment %} overlay {% endcomment %}
{% capture overlay %}
  {%- if block.settings.link != blank -%}
    <a
      href="{{ block.settings.link }}"
      class="container_block__link"
      {% if block.settings.open_in_new_tab %}
        target="_blank" rel="noopener"
      {% endif %}
    ></a>
  {%- endif -%}

  {% if block.settings.background_media != "none" %}
    <div class="background-media">
        {% if block.settings.background_media == "video" and block.settings.video != blank %}
            <video
                aria-hidden="true"
                poster="{{ block.settings.video.preview_image | image_url }}"
                playsinline
                muted
                autoplay
                loop>
                {% for sourceElement in block.settings.video.sources %}
                <source
                    src="{{ sourceElement.url }}"
                    type="{{ sourceElement.mime_type }}"
                >
                {% endfor %}
            </video>
        {% endif %}

        {% if block.settings.background_media == "image" and block.settings.background_image != blank %}
            {{ block.settings.background_image | image_url: width: 3840 | image_tag: loading: 'eager', fetchpriority: "high" }}
        {% endif %}

    </div>
    {% endif %}
{% endcapture %}
{% comment %} overlay End {% endcomment %}


{% comment %} Container {% endcomment %}
<div id="container-{{ block.id }}" class="{{ block.settings.advanced_classes }}" {{ block.shopify_attributes }}>
  {{ overlay }}
  {% content_for 'blocks' %}
</div>
{% comment %} Container End {% endcomment %}

